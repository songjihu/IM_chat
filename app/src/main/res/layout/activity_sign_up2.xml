<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:focusableInTouchMode="true"
	tools:context=".activity.EmailtestActivity">

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/imageView2"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			android:src="@drawable/good_morning_img" />

	</FrameLayout>

	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="80dp"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/gotham"
				android:text="Good "
				android:textColor="#ffffff"
				android:textSize="32sp" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:fontFamily="@font/gotham"
				android:text="Morning"
				android:textColor="#ffffff"
				android:textSize="32sp" />

			<View
				android:layout_width="match_parent"
				android:layout_height="2dp"
				android:layout_marginTop="2dp"
				android:background="#deff00" />

		</LinearLayout>


	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/linearLayout"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="4dp"
		android:fontFamily="@font/calibri"
		android:gravity="center"
		android:text="Come and join us"
		android:textColor="#ffffff"
		android:textSize="32sp" />


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="32dp"
		android:orientation="vertical"
		android:paddingLeft="32dp"
		android:paddingRight="32dp">


		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColorHint="#96ffffff"
			android:theme="@style/EditScreenTextInputLayoutStyle">

			<AutoCompleteTextView
				android:id="@+id/etInputEmail"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:drawablePadding="16dp"
				android:drawableRight="@drawable/ic_email_white_24dp"
				android:fontFamily="@font/calibri"
				android:hint="注册邮箱"
				android:inputType="textEmailAddress"
				android:maxLines="1"
				android:textColor="@android:color/white"
				android:textSize="16sp" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColorHint="#96ffffff"
			android:theme="@style/EditScreenTextInputLayoutStyle">

			<AutoCompleteTextView
				android:id="@+id/etInputPassword"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:drawablePadding="16dp"
				android:drawableRight="@drawable/ic_lock_white_24dp"
				android:fontFamily="@font/calibri"
				android:hint="设置密码"
				android:inputType="textPassword"
				android:maxLines="1"
				android:textColor="@android:color/white"
				android:textSize="16sp" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColorHint="#96ffffff"
			android:theme="@style/EditScreenTextInputLayoutStyle">

			<AutoCompleteTextView
				android:id="@+id/etInputPassword1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:drawablePadding="16dp"
				android:drawableRight="@drawable/ic_mimaqueren"
				android:fontFamily="@font/calibri"
				android:hint="确认密码"
				android:inputType="textPassword"
				android:maxLines="1"
				android:textColor="@android:color/white"
				android:textSize="16sp" />
		</android.support.design.widget.TextInputLayout>

		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColorHint="#96ffffff"
			android:theme="@style/EditScreenTextInputLayoutStyle">

			<AutoCompleteTextView
				android:id="@+id/etInputGetNum"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:drawablePadding="16dp"
				android:fontFamily="@font/calibri"
				android:drawableRight="@drawable/ic_yanzhengma"
				android:hint="验证码"
				android:maxLines="1"
				android:textColor="@android:color/white"
				android:textSize="16sp" />


		</android.support.design.widget.TextInputLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="8dp"
			android:gravity="center"
			android:orientation="horizontal">

			<Button
				android:id="@+id/btGetNum"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="16dp"
				android:background="@drawable/buttonshapewhitebg"
				android:fontFamily="@font/calibri"
				android:onClick="btClick"
				android:text="     获取验证码     "
				android:textAllCaps="false"
				android:textStyle="bold"
				android:textColor="#96ffffff"
				android:textSize="16dp" />

			<Button
				android:id="@+id/btSubmit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="16dp"
				android:background="@drawable/buttonshapewhitebg"
				android:fontFamily="@font/calibri"
				android:onClick="btClick"
				android:text="     提交并登录     "
				android:textAllCaps="false"
				android:textColor="#96ffffff"
				android:textSize="16dp"
				android:textStyle="bold" />



		</LinearLayout>


		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:fontFamily="@font/calibri"
			android:text="Forgot Password?"
			android:textAlignment="center"
			android:textColor="#96ffffff"
			android:textSize="16sp" />


	</LinearLayout>


</RelativeLayout>
